{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "newLine": "lf"
  },
  "filesGlob": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
