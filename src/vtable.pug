vlist(
    :style="{ flex: '1 1 auto' }",
    :row-height="rowHeight",
    :row-component="$options.components.vtablerow",
    :items="items",
    :row-style-cycle="rowStyleCycle",
    :content-width="contentWidth",
    :ctx="listCtx",
    :get-item-key="getItemKey",
    @scroll="updateScrollPosition",
    @rowclick="onRowEvent('click', ...arguments)",
    @rowdblclick="onRowEvent('dblclick', ...arguments)",
    @rowdragenter="onRowEvent('dragenter', ...arguments)",
    @rowdragleave="onRowEvent('dragleave', ...arguments)",
    @rowdragstart="onRowEvent('dragstart', ...arguments)",
    @rowdragend="onRowEvent('dragend', ...arguments)",
    @rowdragover="onRowEvent('dragover', ...arguments)",
    @rowdrop="onRowEvent('drop', ...arguments)")

        div.vtable-header(slot="header", ref="header", :style="headerStyle")
            template(v-for="(c, index) in columns")
                div.vtable-header-cell(
                    :class="c.className",
                    :style="headerCellStyle(listCtx.widths[index])")
                        | {{ c.title }}
                vtablesplitter(:index="index", :ctx="listCtx")

