div.vtable-container(:style="containerStyle")
    vlist(
        :style="{ flex: '1 1 auto' }",
        :row-height="rowHeight",
        :row-component="$options.components.vtablerow",
        :items="items",
        :row-style-cycle="rowStyleCycle",
        :content-width="contentWidth",
        :ctx="listCtx",
        :row-track-by="rowTrackBy",
        @scroll="updateScrollPosition",
        @row-click="$emit('row-click', $arguments[0])")

            div.vtable-header(slot="header", v-el:header, :style="headerStyle")
                template(v-for="c in columns")
                    div.vtable-header-cell(
                        :class="c.className",
                        :style="headerCellStyle(listCtx.widths[$index])")
                            | {{ c.title }}
                    vtablesplitter(:index="$index", :ctx="listCtx")

