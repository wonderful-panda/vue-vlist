vlist(
    :style="{ flex: '1 1 auto' }",
    :row-height="rowHeight",
    :row-component="$options.components.vtablerow",
    :items="items",
    :row-style-cycle="rowStyleCycle",
    :content-width="contentWidth",
    :ctx="listCtx",
    :get-item-key="getItemKey",
    @scroll="updateScrollPosition",
    @row-click="onRowEvent('click', ...arguments)",
    @row-dblclick="onRowEvent('dblclick', ...arguments)",
    @row-dragenter="onRowEvent('dragenter', ...arguments)",
    @row-dragleave="onRowEvent('dragleave', ...arguments)",
    @row-dragstart="onRowEvent('dragstart', ...arguments)",
    @row-dragend="onRowEvent('dragend', ...arguments)",
    @row-dragover="onRowEvent('dragover', ...arguments)",
    @row-drop="onRowEvent('drop', ...arguments)")

        div.vtable-header(slot="header", ref="header", :style="headerStyle")
            template(v-for="(c, index) in columns")
                div.vtable-header-cell(
                    :class="c.className",
                    :style="headerCellStyle(listCtx.widths[index])")
                        | {{ c.title }}
                vtablesplitter(:index="index", :ctx="listCtx")

