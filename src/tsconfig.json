{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "strict": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "newLine": "lf"
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "example",
    "test"
  ]
}
