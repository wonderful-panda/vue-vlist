{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "."
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "example",
    "test"
  ]
}
