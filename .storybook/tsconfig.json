{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "resolveJsonModule": true
  },
  "include": [
    "stories/**/*.ts",
    "stories/**/*.tsx",
    "../node_modules/vue-tsx-support/enable-check.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
