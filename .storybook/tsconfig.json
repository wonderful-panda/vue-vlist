{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf"
  },
  "include": [
    "stories/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
